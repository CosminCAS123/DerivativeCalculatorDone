<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DerivativeCalculator.CustomViews.DisplayDerivative">
  <ContentView.Content >
        <Frame HeightRequest="160"
              Margin="50 , 220 , 50 , 0">
            <StackLayout>
                <Label FontFamily="BossFont"
                   TextColor ="#d61313"
                Margin="-15 , -15 ,0 , 0" 
                Text="Here is your result:"/>
                     
                    <Label x:Name="ResultLabel" 
                       HorizontalOptions="Center"
                       TextColor="Black"
                       FontSize="18"
                       />
                <Label x:Name="ExecutionTimeLabel" 
                    Margin="0 , 0 , 0 , 0"
                       FontFamily="BossFont"
                       FontSize="13.5"
                       HorizontalOptions="Center"
                    />
                <ImageButton x:Name ="CloseButton"
                        HeightRequest="40"
                        Margin="230 , 65 , -15 ,0"
                        Clicked="CloseButton_Clicked"
                                               
                        
                        
                       />

            </StackLayout>
        </Frame>
  </ContentView.Content>
</ContentView>